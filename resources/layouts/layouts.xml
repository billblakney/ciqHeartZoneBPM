<layouts>
    <!-- A generic, centered layout. -->
    <layout id="frAll">
        <drawable id="Background" class="Background" >
        	<param name="center_x">107</param>
        	<param name="center_y">90</param>
        	<param name="radius">90</param>
        </drawable>
        <label id="value" x="center" y="center" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_NUMBER_THAI_HOT" />
    </layout>
    <layout id="frTopHalf">
        <drawable id="Halfy" />
        <drawable class="Background" />
        <label id="value" x="center" y="22" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_NUMBER_HOT" />
    </layout>
    <layout id="frBotHalf">
        <drawable class="Background" />
        <drawable id="Halfy" />
        <label id="value" x="center" y="5" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_NUMBER_HOT" />
    </layout>
    <layout id="MainLayout">
        <drawable class="Background" />
        <label id="label" x="center" y="center" color="Gfx.COLOR_LT_GRAY" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_TINY" />
        <label id="value" x="center" y="center" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" font="Gfx.FONT_NUMBER_THAI_HOT" />
    </layout>
</layouts>
